{
  "name": "launcher",
  "version": "1.0.0",
  "main": "./out/main/index.js",
  "type": "module",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:web",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.renderer.json --composite false",
    "start": "electron-vite dev -w",
    "dev": "electron-vite dev -w",
    "build": "pnpm run typecheck && electron-vite build",
    "build:win": "pnpm run build && electron-builder --win --config",
    "build:mac": "pnpm run build && electron-builder --mac --config",
    "build:linux": "pnpm run build && electron-builder --linux --config"
  },
  "dependencies": {
    "@doublekekse/find-java": "github:Tomate0613/find-java",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@mdi/js": "^7.4.47",
    "@vueuse/core": "^14.1.0",
    "adm-zip": "^0.5.16",
    "ansi-colors": "^4.1.3",
    "axios": "^1.13.2",
    "axios-retry": "^4.5.0",
    "cli-progress": "^3.12.0",
    "configparser": "^0.3.10",
    "fs-extra": "^11.3.3",
    "msmc": "^5.0.5",
    "pend": "^1.2.0",
    "prismarine-nbt": "^2.8.0",
    "skinview3d": "^3.4.1",
    "tomate-launcher-core": "github:Tomate0613/launcher-core",
    "tomate-loaders": "github:Tomate0613/tomate-loaders",
    "tomate-mods": "github:Tomate0613/tomate-mods",
    "vue": "^3.5.27",
    "vue-router": "^4.6.4",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@stylistic/eslint-plugin": "^5.7.0",
    "@swc/core": "^1.15.10",
    "@types/adm-zip": "^0.5.7",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^25.0.9",
    "@types/yargs": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-vue": "^6.0.3",
    "autoprefixer": "^10.4.23",
    "dotenv": "^17.2.3",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.7.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.2.2"
  }
}
